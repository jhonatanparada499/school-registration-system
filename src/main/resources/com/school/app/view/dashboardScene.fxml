<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="CLASS SECTIONS DASHBOARD">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TableView fx:id="classSectionsTable" maxWidth="900.0" prefHeight="250.0" prefWidth="550.0">
               <columns>
                  <TableColumn fx:id="idCol" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="courseIdCol" prefWidth="100.0" text="Course ID" />
                  <TableColumn fx:id="sectionNumberCol" prefWidth="120.0" text="Section Number" />
                  <TableColumn fx:id="instructorCol" prefWidth="120.0" text="Instructor" />
                  <TableColumn fx:id="roomIdCol" prefWidth="80.0" text="Room ID" />
                  <TableColumn fx:id="enrolledCapacityCol" prefWidth="120.0" text="Enrolled/Capacity" />
                  <TableColumn fx:id="waitListedCol" prefWidth="120.0" text="Wait Listed" />
               </columns>
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="BSave" mnemonicParsing="false" onAction="#saveClassSections" text="Save" />
            <Button fx:id="BRefresh" mnemonicParsing="false" onAction="#refreshTable" text="Refresh Data" />
            <Label text="Last updated:" HBox.hgrow="ALWAYS" />
            <Label fx:id="LLastUpdated" text="2023-10-26 10:30 AM" />
         </children>
         <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
